<Window x:Class="ProphetPlay.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProphetPlay – Registrierung"
        Height="580" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid>
        <Border Background="#2A2A2A" CornerRadius="15" Padding="30" Margin="40">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Registrierung"
                           FontSize="26" FontWeight="Bold"
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Benutzername -->
                <TextBlock Grid.Row="1" Text="Benutzername" Foreground="White" Margin="0,0,0,5"/>
                <TextBox Grid.Row="2" Name="UsernameBox" Height="30"
                         Background="#383838" Foreground="White" BorderBrush="#555"
                         Margin="0,0,0,15"/>

                <!-- Passwort -->
                <TextBlock Grid.Row="3" Text="Passwort" Foreground="White" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="4" Name="PasswortBox" Height="30"
                             Background="#383838" Foreground="White" BorderBrush="#555"
                             Margin="0,0,0,15"/>

                <!-- Passwort wiederholen -->
                <TextBlock Grid.Row="5" Text="Passwort wiederholen" Foreground="White" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="6" Name="PasswortWiederholungBox" Height="30"
                             Background="#383838" Foreground="White" BorderBrush="#555"
                             Margin="0,0,0,20"/>

                <!-- Rolle + Buttons in letzter Row -->
                <StackPanel Grid.Row="7" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Rolle: " Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Name="RollenBox" Width="100" Background="#383838" Foreground="White">
                            <ComboBoxItem Content="User" IsSelected="True"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>
                    </StackPanel>

                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Button Content="Konto erstellen"
                                Width="200" Height="35"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="RegisterButton_Click" Margin="0,0,0,10"/>

                        <Button Content="Zurück zum Login"
                                Width="200" Height="30"
                                Background="#555" Foreground="White"
                                Click="ZurueckButton_Click"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
