<Window x:Class="ProphetPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProphetPlay – Liveticker" 
        Width="1280" Height="800"
        Background="#FF1E1E1E" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="3.6*" />
            <ColumnDefinition Width="2.2*" />
        </Grid.ColumnDefinitions>

        <!-- NEWS PANEL -->
        <Border Grid.Column="0" Background="#FF2A2A2A" Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="⚽ Fußball-News" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <ListBox x:Name="NewsListBox" Height="636" Background="#FF383838" BorderThickness="0" Foreground="White" MouseDoubleClick="NewsListBox_MouseDoubleClick" Width="290">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Padding="10" Background="#FF232323" CornerRadius="6" BorderBrush="#FF4CAF50" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#FF4CAF50"
                                       TextWrapping="Wrap"
                                       MaxWidth="270"/>         

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- TICKER PANEL -->
        <Border Grid.Column="1" Background="#FF252525" Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="📡 Liveticker" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="TextBoxLeaguen" Margin="0,0,0,10" Text="🔍 search ..." Foreground="Gray"/>
                <Button Content="Spiele anzeigen" Width="160" Height="35" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" />
                <ListBox x:Name="ListBoxLeaguen" Margin="10,15,0,0" Background="#FF383838" Foreground="White" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Padding="10" Background="#FF232323" CornerRadius="6" BorderBrush="#FF4CAF50" BorderThickness="1">
                                <StackPanel>
                                    <Button Content="{Binding LeagueName}" Width="486" Height="25" Background="Gray" Foreground="White" FontWeight="Bold" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- GRUPPEN PANEL -->
        <Border Grid.Column="2" Background="#FF2A2A2A" Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="👥 Gruppen &amp; Punkte" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                <ListBox Background="#FF383838" Foreground="White" BorderThickness="0">
                    <ListBoxItem Content="Gruppe A – Du bist 2."/>
                    <ListBoxItem Content="Gruppe B – Du bist 1."/>
                </ListBox>
                <Button Content="Gruppe verwalten" Margin="0,10,0,0" Width="160" Height="35" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
