<Window x:Class="ProphetPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProphetPlay"
        Title="ProphetPlay – Liveticker" 
        Width="1280" Height="800"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- sichtbar nur für Admin -->
        <local:IsAdminToVisibilityConverter x:Key="IsAdminToVisibilityConverter"/>
        <!-- sichtbar nur für Admin UND eigene News -->
        <local:AdminAndLocalToVisibilityConverter x:Key="AdminAndLocalToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="3.6*"/>
            <ColumnDefinition Width="2.2*"/>
        </Grid.ColumnDefinitions>

        <!-- NEWS PANEL -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="#FF2A2A2A"
                Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="⚽ Fußball-News"
                               FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                    <Button Content="News erstellen"
                            Margin="12,0,0,0" Padding="6,2"
                            Background="#FF4CAF50" Foreground="White"
                            Visibility="{Binding AktuelleRolle, Converter={StaticResource IsAdminToVisibilityConverter}}"
                            Click="BtnCreateNews_Click"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto" Height="600">
                    <ListBox x:Name="NewsListBox"
                             Background="#FF383838" BorderThickness="0" Foreground="White"
                             MouseDoubleClick="NewsListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="8"
                                        Background="#FF232323" CornerRadius="6"
                                        BorderBrush="#FF4CAF50" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Title}"
                                                   FontSize="14" Foreground="White"
                                                   TextWrapping="Wrap" MaxWidth="240"/>
                                        <Button Grid.Column="1"
                                                Content="Löschen"
                                                Margin="8,0,0,0" Padding="4,2"
                                                Background="#FFD32F2F" Foreground="White"
                                                Click="NewsDeleteButton_Click"
                                                Tag="{Binding Id}">
                                            <Button.Visibility>
                                                <MultiBinding Converter="{StaticResource AdminAndLocalToVisibilityConverter}">
                                                    <Binding Path="DataContext.AktuelleRolle"
                                                             RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="Id"/>
                                                </MultiBinding>
                                            </Button.Visibility>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- TICKER PANEL -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="#FF252525"
                Margin="10" Padding="15" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="📡 Liveticker"
                           FontSize="22" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10"/>
                <TextBox Grid.Row="1" x:Name="TextBoxLeaguen" Margin="0,0,0,10"
                         Text="🔍 search ..." Foreground="Gray"
                         GotFocus="TextBoxLeaguen_GotFocus"
                         LostFocus="TextBoxLeaguen_LostFocus"
                         TextChanged="TextBoxLeaguen_TextChanged"/>
                <ListBox Grid.Row="2" x:Name="ListBoxLeaguen"
                         Background="#FF383838" Foreground="White" BorderThickness="0"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Click="LeagueButton_Click"
                                    Background="#FF232323"
                                    BorderBrush="#FF4CAF50"
                                    BorderThickness="1"
                                    Padding="10" Margin="0,0,0,10"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="{Binding LogoUrl}"
                                           Width="30" Height="30"
                                           Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding LeagueName}"
                                                   FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding CountryName}"
                                                   FontStyle="Italic" Foreground="LightGray"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- USER/ADMIN PANEL -->
        <Border Grid.Row="0" Grid.Column="2"
                Background="#FF2A2A2A"
                Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="👥 User"
                           FontSize="22" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10"/>
                <ListBox Background="#FF383838"
                         Foreground="White" BorderThickness="0">
                    <ListBoxItem Content="User A"/>
                    <ListBoxItem Content="User B"/>
                </ListBox>
                <Button Content="Gruppe verwalten"
                        Margin="0,10,0,20" Width="160" Height="35"
                        Background="#FF2196F3" Foreground="White"
                        FontWeight="Bold"/>
                <StackPanel x:Name="AdminPanel" Visibility="Collapsed">
                    <TextBlock Text="Alle Benutzer (Admin)"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="White" Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding BenutzerListe}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="{Binding benutzername}"
                                               Foreground="White" Width="120"/>
                                    <Button Content="Löschen"
                                            Click="LoeschenButton_Click"
                                            Tag="{Binding benutzername}"
                                            Background="#FFD32F2F"
                                            Foreground="White"
                                            Width="70" Height="22"
                                            FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Abmelden-Button -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Button Content="Abmelden"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10" Padding="10,5"
                    Width="100"
                    Background="#FFD32F2F"
                    Foreground="White"
                    Click="AbmeldenButton_Click"/>
        </Grid>
    </Grid>
</Window>
