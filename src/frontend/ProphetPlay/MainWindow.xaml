<Window x:Class="ProphetPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProphetPlay – Liveticker" 
        Width="1280" Height="800"
        Background="#FF1E1E1E" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="3.6*" />
            <ColumnDefinition Width="2.2*" />
        </Grid.ColumnDefinitions>

        <!-- NEWS PANEL -->
        <Border Grid.Column="0" Background="#FF2A2A2A" Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="⚽ Fußball-News" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <ListBox x:Name="NewsListBox" Height="636" Background="#FF383838" BorderThickness="0" Foreground="White" MouseDoubleClick="NewsListBox_MouseDoubleClick" Width="290">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Padding="10" Background="#FF232323" CornerRadius="6" BorderBrush="#FF4CAF50" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       MaxWidth="235"/>         

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- TICKER PANEL -->
        <Border Grid.Column="1" Background="#FF252525" Margin="10" Padding="15" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📡 Liveticker" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Grid.Row="1" x:Name="TextBoxLeaguen" Margin="0,0,0,10" Text="🔍 search ..." Foreground="Gray" GotFocus="TextBoxLeaguen_GotFocus" LostFocus="TextBoxLeaguen_LostFocus"/>
                <Button Grid.Row="2" Content="Spiele anzeigen" Width="160" Height="35" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Margin="5,5,5,15" Click="Spiele_anzeigen_Button"/>

                <ListBox Grid.Row="3" x:Name="ListBoxLeaguen"
                 Margin="0"
                 Background="#FF383838"
                 Foreground="White"
                 BorderThickness="0"
                 HorizontalContentAlignment="Stretch"
                 SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Click="LeagueButton_Click"
                            Background="#FF232323"
                            BorderBrush="#FF4CAF50"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0,0,0,10"
                            Cursor="Hand">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="{Binding LogoUrl}" Width="30" Height="30" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding LeagueName}" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding CountryName}" FontStyle="Italic" Foreground="LightGray"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>



        <!-- GRUPPEN PANEL -->
        <Border Grid.Column="2" Background="#FF2A2A2A" Margin="10" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="👥 User" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                <ListBox Background="#FF383838" Foreground="White" BorderThickness="0">
                    <ListBoxItem Content="User A"/>
                    <ListBoxItem Content="User B"/>
                </ListBox>
                <Button Content="Gruppe verwalten" Margin="0,10,0,0" Width="160" Height="35" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
