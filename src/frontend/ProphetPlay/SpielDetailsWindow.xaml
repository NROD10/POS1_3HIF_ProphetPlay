<Window x:Class="ProphetPlay.SpielDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spieldetails" Height="600" Width="400"
        Background="#FF1E1E1E" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TeamsHeader"
                       FontSize="20" FontWeight="Bold"
                       Foreground="White" Margin="0,0,0,10"/>
            <TextBlock x:Name="TimeHeader"
                       FontSize="14" Foreground="LightGray"
                       Margin="0,0,0,20"/>
            <TextBlock Text="📋 Ereignisse" 
                       FontSize="16" FontWeight="Bold"
                       Foreground="White" Margin="0,0,0,5"/>
            <ListBox x:Name="EventsList"
                     Background="#FF2A2A2A" Foreground="White"
                     BorderThickness="0" Height="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FF4CAF50" BorderThickness="1" Padding="5" Margin="0,0,0,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Time.Elapsed}" Width="30"/>
                                <TextBlock Text="{Binding Type}" Width="60"/>
                                <TextBlock Text="{Binding Player.Name}" FontWeight="Bold" Width="120"/>
                                <TextBlock Text="{Binding Detail}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
